<div class="container">
  <div class="text-center w-100 m-10">
    <h1><%= current_user.username %></h1>
    <ul class="flex justify-around mt-10">
      <li>
        <div class="flex">
          <%= image_tag 'karma.png', alt: "karma-points", class: "h-5 mr-2" %>
          <p class="text-gray-500">
            <% if user_signed_in? %>
              <span class="font-bold mr-2"><%= current_user.karma_points %> </span> karma points
            <% end %>
          </p>
        </div>
      </li>
      <li >
        <p class="text-gray-500">
          <%= current_user.boards.count %> list created
        </p>
      </li>
      <li>
        <p class="text-gray-500">
          <%= current_user.bookmarks.count %> bookmarks created
        </p>
      </li>
    </ul>
  </div>

  <div>
    <div class="flex w-50 m-auto justify-around pl-50 pr-50">
      <div > <%= link_to "Modify profile", edit_user_registration_path, class:"button-primary" %> </div>
<!--       <div class="button-secondary">Share profile</div>
 -->    </div>
  </div>
 <div class="cards-2 mb-10">
   <% @my_boards.each do |board| %>
      <%= render 'boards/top_card', board: board %>
    <% end %>
  </div>
</div>

